<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/reservation_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="NAME"
            android:textColor="#333"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/number_of_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reservation_summary"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="number of people"
            android:textSize="15dp" />

        <Button
            android:id="@+id/delete_reservation_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/reservation_summary"
            android:layout_alignBottom="@+id/reservation_summary"
            android:layout_alignParentEnd="true"
            android:focusable="false"
            android:text="Delete" />

    </RelativeLayout>

</LinearLayout>